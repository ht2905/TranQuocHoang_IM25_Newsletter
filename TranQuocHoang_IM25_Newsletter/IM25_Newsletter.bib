  shorttitle = {The Effects of Adsorbed Benzo(a)Pyrene on Dynamic Behavior of Polystyrene Nanoplastics through Phospholipid Membrane},
  author = {Cheng, Shiqiang and Ye, Zhicheng and Wang, Xiong and Lian, Cheng and Shang, Yazhuo and Liu, Honglai},
  date = {2023-04-01},
  journaltitle = {Colloids and Surfaces B: Biointerfaces},
  shortjournal = {Colloids and Surfaces B: Biointerfaces},
