@article{yangRoleMicrogliaCentral2010,
  title = {The {{Role}} of {{Microglia}} in {{Central Nervous System Immunity}} and {{Glioma Immunology}}},
  author = {Yang, Isaac and Han, Seunggu J. and Kaur, Gurvinder and Crane, Courtney and Parsa, Andrew T.},
  date = {2010-01},
  journaltitle = {Journal of clinical neuroscience : official journal of the Neurosurgical Society of Australasia},
